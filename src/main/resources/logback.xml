	<appender name="DR" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${app.root}/logs/takeaway.logback.log</file>
		<encoder>
			<pattern>%d [%thread] %-5level [%logger:%line] - %msg%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${app.root}/logs/takeaway.%d{yyyy-MM-dd}.log</fileNamePattern>   
      		<maxHistory>30</maxHistory>
		</rollingPolicy>
	</appender>
	
	<logger name="com.cobble" level="DEBUG" />
	
	<logger name="org.springframework" level="DEBUG" />
	
	<root level="DEBUG">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="DR" />
	</root>
</configuration>